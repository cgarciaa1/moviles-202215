<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CreateAlbumFragment">

    <LinearLayout
        android:id="@+id/ll_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:text="@string/add_song_title"
            android:textAlignment="center"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/add_song_name"
            android:hint="@string/add_song_form_name"
            android:backgroundTint="@color/green_background"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:padding="20dp"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:autofillHints=""
            android:inputType="text" />
        <EditText
            android:id="@+id/add_song_duration"
            android:hint="@string/add_song_form_duration"
            android:backgroundTint="@color/green_background"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:autofillHints=""
            android:inputType="text"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="25dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/add_song_button"
                android:text="@string/add_song_form_button"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
